<section class="post-info">
    <div class="question-summary">
        <span>{{difficulty.name}}</span>
        <span class="splitter"></span>
        <span class="post-type">{{type.name}}</span>
        <span class="splitter"></span>
        <span class="post-language">{{language.name}}</span>
    </div>
    <div class="question-head">
        <h2>{{title}}</h2>
    </div>
    <div class="question-body">
        {{answer}}
    </div>
    <div class="question-action">

        <div class="star">
            <div class="data_icon">
                <img src="../assets/post_icons/eye.svg" alt="">
            </div>
            <span>
                Met
            </span>
        </div>
        <div class="comment">
            <div class="data_icon">
                <img src="../assets/post_icons/comment.svg" alt="">
            </div>
            <span>
                Comment
            </span>
        </div>
        <div class="star">
            <div class="data_icon">
                <img src="../assets/post_icons/star.svg" alt="">
            </div>
            <span>
                Star
            </span>
        </div>
        <div class="share">
            <div class="data_icon">
                <img src="../assets/post_icons/share.svg" alt="">
            </div>
            <span>
                Share
            </span>
        </div>
    </div>



</section>
<section class="comment-section">
    <div class="leave-comment">
        <form id="commentForm">
            <textarea></textarea>
            <div class="button">
                <button type="submit">Comment</button>
            </div>
        </form>
    </div>
    <div class="comment-action">
        <span>{{comments.length}} {{format_plural "Answer" comments.length}}</span>

    </div>
    <div class="comment-list">
        {{#each comments as |comment|}}
        {{>single-comment comment}}
        {{/each}}
    </div>
</section>


{{!-- used '.star-btn' for activelistener --}}

